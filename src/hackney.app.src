%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

{application, hackney,
    [
        {description, "simple HTTP client"},
        {vsn, "0.7.0"},
        {registered, [hackney_pool]},
        {applications, [kernel,
                        stdlib,
                        crypto,
                        asn1,
                        public_key,
                        ssl,
                        mimetypes]},
        {included_applications, [dispcount]},
        {mod, { hackney_app, []}},
        {env, [{timeout, 150000},
               {pool_size, 50},
               {restart, permanent},
               {shutdown, 10000},
               {maxr, 10},
               {maxt, 1}]}
]}.
